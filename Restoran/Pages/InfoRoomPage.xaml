<Page x:Class="Restoran.Pages.InfoRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restoran.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="InfoRoomPage">

    <Grid Background="White">
        <Image Margin="20,91,522,475">
            <Image.Source>
                <Binding Path="Photo">
                    <Binding.TargetNullValue>
                        <BitmapImage UriSource="/img/imgNo.png" />
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>
        <TextBlock HorizontalAlignment="Left" Margin="272,10,0,0" TextWrapping="Wrap" Text="{Binding NameRoom}" VerticalAlignment="Top" Width="274" Height="54"/>
        <TextBlock Text="{Binding Price,StringFormat={}{0:N2} Руб}"   Margin="247,632,0,114" Width="274" Height="54" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold"></TextBlock>
    </Grid>
</Page>
