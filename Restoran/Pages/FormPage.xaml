<Page x:Class="Restoran.Page.FormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restoran.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FormPage">

    <Grid Background="White">
        <DatePicker x:Name="datePicker"  SelectedDateChanged="DatePicker_SelectedChanged" HorizontalAlignment="Left" Margin="52,67,0,0" VerticalAlignment="Top" Height="22" Width="131"/>
        <ComboBox x:Name="cbTime" HorizontalAlignment="Left" Margin="33,124,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" Click="CreateReq_Click" HorizontalAlignment="Left" Margin="431,407,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="407,134,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNum" HorizontalAlignment="Left" Margin="488,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="412,175,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top"/>
        <TextBox x:Name="tbSur" HorizontalAlignment="Left" Margin="488,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="412,205,0,0" TextWrapping="Wrap" Text="Отчество" VerticalAlignment="Top"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Margin="488,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="412,287,0,0" TextWrapping="Wrap" Text="Номер" VerticalAlignment="Top"/>
        <TextBox x:Name="tbPat" HorizontalAlignment="Left" Margin="488,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="380,249,0,0" TextWrapping="Wrap" Text="Количество людей" VerticalAlignment="Top"/>
        <TextBox x:Name="tbPhone" HorizontalAlignment="Left" Margin="488,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbRoom" SelectedItem="{Binding Rooms}"  DisplayMemberPath="NameRoom"  HorizontalAlignment="Left" Margin="33,171,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbHour"   HorizontalAlignment="Left" Margin="33,207,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,103,0,0" TextWrapping="Wrap" Text="Выберите время бронирования " VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="33,148,0,0" TextWrapping="Wrap" Text="Выберите комнату " VerticalAlignment="Top"/>

    </Grid>
</Page>
