<Page x:Class="Restoran.Page.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restoran.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid Background="White">
        <DataGrid x:Name="DtGrid" Margin="0,0,0,260">
            
        </DataGrid>
        <ListView x:Name="bListView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,205,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding FIO}" Header="№"/>

                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
